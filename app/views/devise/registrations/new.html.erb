<h2><%= t('.sign_up') %></h2>

<div class="form-group">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% f.label :email %><br />
  <%= f.email_field :email,placeholder: 'Eメールアドレス', autofocus: true, autocomplete: "email", class: 'form-control mb-3' %>

  <% f.label :name %>
  <%= f.text_field :name, placeholder: 'フルネーム', class: 'form-control mb-3' %>

  <% f.label :display_name %> <em>(最大6字まで)</em><br />
  <%= f.text_field :display_name,placeholder: 'ニックネーム', autofocus: true, maxlength: "6", class: 'form-control mb-3' %>

  <% f.label :password %>
  <% if @minimum_password_length %>
  <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
  <% end %><br />
  <%= f.password_field :password, placeholder: 'パスワード', autocomplete: "new-password", class: 'form-control mb-3' %>

  <% f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, placeholder: 'パスワード(確認)', autocomplete: "new-password", class: 'form-control mb-3' %>

  <div class="actions">
    <%= f.submit t('.sign_up'), class: 'btn btn-lg btn-info btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
