          </div>
        </div>
        <div class="card">
          <%= link_to image_tag("449A0960.jpg", alt: "top image", class: 'card-img-top')%>
          <div class="card-body">
            <h4 class="card-title"><%= post.item_name %></h4>
            <p class="card-text"><%= post.text %></p>
            <p class="card-text"><small class="text-muted"><%= post.created_at %></small></p>
          </div>
        </div>
        <div class="card">
          <%= link_to image_tag("2016-10-21-19.58.24.jpg", alt: "top image", class: 'card-img-top')%>
          <div class="card-body">
            <h4 class="card-title"><%= post.item_name %></h4>
            <p class="card-text"><%= post.text %></p>
            <p class="card-text"><small class="text-muted"><%= post.created_at %></small></p>
          </div>
        </div>
      </div>
