<% if user_signed_in? %>
    <% @posts.each do |post| %>
        <div class="card-deck">
        <div class="card">
          <%= link_to image_tag("th_IMG_3245-728x546.jpg", alt: "top image", class: 'card-img-top')%>
          <div class="card-body">
            <h4 class="card-title"><%= post.item_name %></h4>
            <p class="card-text"><%= post.text %></p>
