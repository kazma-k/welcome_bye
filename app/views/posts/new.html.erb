<body class="text-center">
  <div class="pagetitle">
    <h1>新規投稿</h1>
  </div>
    <div class="form-group">
      <%= form_with model: @post, local: true do |f| %>
        <label><%= f.radio_button :flag, 0 %> 手に入れた物 </label>
        <label><%= f.radio_button :flag, 1 %> 手放した物</label>

    <p>
      <%= f.label :item_name %><br>
      <%= f.text_field :item_name, class: 'form-control', placeholder: '例：カバン、腕時計', class: 'form-control mb-3' %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text, rows: 5, class: 'form-control', placeholder: '例：手に入れた理由、手放した理由', class: 'form-control mb-3' %>
    </p>

    <%= f.label :image %><br>
    <%= f.file_field :image, class: 'form-control', class: 'form-control mb-3' %>

    <p>
      <%= f.submit class: 'btn btn-lg btn-info' %>
    </p>
    <% end %>
  </div>
