<body class="text-center">
  <form class="form-signin">
<div class="pagetitle">
<h1>新規投稿</h1>
</div>
  <div class="form-group">
    <%= form_with model: @post, local: true do |f| %>
        <label><%= f.radio_button :flag, 0 %> 手に入れた物 </label>
        <label><%= f.radio_button :flag, 1 %> 手放した物</label>
      <p>
        <%= f.label :item_name %><br>
        <%= f.text_field :item_name, class: 'form-control', placeholder: '例：カバン' %>
      </p>
  </div>

  <div class="form-group">
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text, rows: 5, class: 'form-control', placeholder: '例：hogehogefoobar' %>
    </p>
  </div>

  <form>
    <div class="form-group">
      <label for="exampleFormControlFile1">画像</label>
      <input type="file" class="form-control-file">
    </div>
  </form>

  <p>
    <%= f.submit class: 'btn btn-lg btn-info ' %>
  </p>
  <% end %>
