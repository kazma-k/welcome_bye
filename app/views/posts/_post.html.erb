
  <% if post.image.attached? %>
  <div class="card_layout col-xs-12 col-sm-6 col-lg-4 ">
      <div class="card">
        <%= image_tag post.image.variant(resize: "457x305").processed, alt: "top image", class: 'card-img-top border border-dark rounded' %>
        <div class="card-body">
          <% if post.flag == 0 %>
            <div class="d-inline p-1 bg-primary text-white">手に入れた物</div>
          <% else %>
            <div class="d-inline p-1 bg-dark text-white">手放した物</div>
          <% end %>
          <h4 class="card-title"><%= post.item_name %></h4>
          <p class="card-text"><%= post.text %></p>
          <p class="card-text"><small class="text-muted"><%= post.created_at %></small></p>
          <% if user_signed_in? && post.user_id == current_user.id %>
            <%= link_to '詳細', post_path(post), class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
  </div>
  <% end %>
